def genSD(n, D, offset=0):
    # Generate sampling sequence s_D
    #    n - length of sequence
    #    D - sequence period
    #    offset - position of impulse
    sd = np.zeros(n);
    sd[offset%D::D] = 1.0
    return(sd)


